<body>
<div class="center-container">
    <div class="push-100"></div>
    <div class="loader center-align">
        <img class="logo" src="{{ asset('assets/img/logo-white.png') }}" alt="Logo" />
    </div>
</div>
<div class="container">
    <div class="row center-align">
        <h1>QSO Logger</h1>
    </div>

    <form action="{{ path('qso_login') }}" method="post">

        {% if error %}
            <div class="row">
                <div class="col s12 m12">
                    <div class="card red lighten-2">
                        <div class="card-content white-text center-align" style="width: 100%;">
                            <span class="card-title">Oops!</span>
                            <p class="center-align">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}

        <div class="row">
            <div class="input-field col s12">
                <input type="text" id="username" class="{% if error %}invalid{% endif %}" name="_username" value="{{ last_username }}" />
                <label for="username">E-mail</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field col s12">
                <input type="password" class="{% if error %}invalid{% endif %}" id="password" name="_password" />
                <label for="password">password</label>
            </div>
        </div>

        <div class="row">
            <div class="col s12">
                <button type="submit" class="btn green accent-4" style="width: 100%">Login</button>
            </div>
            <div class="col s12 center-align">
                <div class="push-40"></div>
                <a href="{{ url('qso_register') }}">Or create an account instead</a>
            </div>
        </div>
    </form>

</div>
<script type="text/javascript" src="{{ asset('assets/js/jquery-3.2.1.min.js') }}"></script>
