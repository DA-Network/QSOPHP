    <style>
        body, html {
            background-color: #0D47A1;
        }

        div.center-container {
            display: flex;
            flex-direction: column;
        }

        .center-align {
            margin: 0 auto;
        }

        .logo {
            max-width: 50%;
            clear: both;
        }
        .push-100 {
            width: 100%;
            height: 100px;
        }
        .push-40 {
            width: 100%;
            height: 40px;
        }

        h1 {
            color: #FFF;
        }

        body {
            color: #FFF;
        }

        /* label color */
        .input-field label {
            color: #FFF;
        }
        /* label focus color */
        .input-field input[type=password]:focus + label,
        .input-field input[type=text]:focus + label {
            color: #FFF;
        }

        .input-field input[type=password]:focus,
        .input-field input[type=text]:focus {
