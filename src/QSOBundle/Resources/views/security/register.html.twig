    <link rel="apple-touch-icon" sizes="76x76" href="{{ asset('apple-icon-76x76.png') }}">
    <link rel="apple-touch-icon" sizes="114x114" href="{{ asset('apple-icon-114x114.png') }}">
    <link rel="apple-touch-icon" sizes="120x120" href="{{ asset('apple-icon-120x120.png') }}">
    <link rel="apple-touch-icon" sizes="144x144" href="{{ asset('apple-icon-144x144.png') }}">
    <link rel="apple-touch-icon" sizes="152x152" href="{{ asset('apple-icon-152x152.png') }}">
    <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('apple-icon-180x180.png') }}">
    <link rel="icon" type="image/png" sizes="192x192"  href="{{ asset('android-icon-192x192.png') }}">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('favicon-32x32.png') }}">
    <link rel="icon" type="image/png" sizes="96x96" href="{{ asset('favicon-96x96.png') }}">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('favicon-16x16.png') }}">
    <link rel="manifest" href="{{ asset('manifest.json') }}">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-TileImage" content="{{ asset('ms-icon-144x144.png') }}">
    <style>
        body, html {
            background-color: #0D47A1;
        }

        div.center-container {
            display: flex;
            flex-direction: column;
        }

        .center-align {
            margin: 0 auto;
        }

        .logo {
            max-width: 50%;
            clear: both;
        }
        .push-100 {
            width: 100%;
            height: 100px;
        }
        .push-40 {
            width: 100%;
            height: 40px;
        }

        h1 {
            color: #FFF;
        }

        body {
            color: #FFF;
        }

        /* label color */
        .input-field label {
            color: #FFF;
        }
        /* label focus color */
        .input-field input[type=password]:focus + label,
        .input-field input[type=text]:focus + label {
            color: #FFF;
        }

        .input-field input[type=password]:focus,
        .input-field input[type=text]:focus {
            border-bottom: 1px solid #FFF;
            box-shadow: 0 1px 0 0 #EEE;
        }
    </style>
</head>
<body>
<div class="center-container">
    <div class="push-50"></div>
    <div class="loader center-align">
        <img class="logo" src="{{ asset('assets/img/logo-white.png') }}" alt="Logo" />
    </div>
</div>
<div class="container">
    {{ form_start(form) }}
        <div class="row center-align">
            <h4>DA's QSOLogbook</h4>
            <h6>Register below. All fields are required.</h6>
        </div>

        {% if errors|length > 0 %}
            <div class="row">
                <div class="col s12 m12">
                    <div class="card red lighten-2">
                        <div class="card-content white-text center-align" style="width: 100%;">
                            <span class="card-title">Oops!</span>
                            {% for message in errors %}
                            <p class="center-align">{{ message }}</p>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}

        <div class="row">
            <div class="input-field col s12">
                {{ form_widget(form.firstname) }}
                {{ form_label(form.firstname) }}
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                {{ form_widget(form.lastname) }}
                {{ form_label(form.lastname) }}
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                {{ form_widget(form.email) }}
                {{ form_label(form.email) }}
            </div>
        </div>
        <div class="row">
            <div class="col s12">
                <p>
                    <input type="checkbox" class="filled-in" id="noCallsign" />
                    <label for='noCallsign'>I Don't Have A Callsign</label>
                </p>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                {{ form_widget(form.callsignName) }}
                {{ form_label(form.callsignName) }}
            </div>
        </div>
        

        <div class="row">
            <div class="input-field col s12">
                {% if form_errors(form.plainPasswordCompare)|length > 0 %}
                    {{ form_widget(form.plainPassword, {attr: {class: 'invalid'}}) }}
                {% else %}
                    {{ form_widget(form.plainPassword) }}
                {% endif %}

                {{ form_label(form.plainPassword) }}
            </div>
        </div>


        <div class="row">
            <div class="input-field col s12">
                {% if form_errors(form.plainPasswordCompare)|length > 0 %}
                    {{ form_widget(form.plainPasswordCompare, {attr: {class: 'invalid'}}) }}
                {% else %}
                    {{ form_widget(form.plainPasswordCompare) }}
                {% endif %}
                {{ form_label(form.plainPasswordCompare) }}
            </div>
        </div>

        <div class="row">
            <div class="col s12">
                <button type="submit" class="btn green accent-4" style="width: 100%">Register</button>
            </div>
            <div class="col s12 center-align">
                <br />
                <button class="btn black accent-4 fullWidth"><a href="{{ url('qso_login') }}">Log In Instead</a></button>
                <div class="push-100"></div>
            </div>
            
        </div>
    {{ form_end(form) }}
</div>
<script type="text/javascript" src="{{ asset('assets/js/jquery-3.2.1.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('assets/js/materialize.min.js') }}"></script>

</body>
