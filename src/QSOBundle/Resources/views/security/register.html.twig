        $("#noCallsign").click(function(){
                var noCallsign = $("#noCallsign").is(":checked");
                if (noCallsign){
                    $("#qsobundle_user_callsignName").attr("value", "demo") ;
                    $("#qsobundle_user_callsignName").attr("readonly", true) ;
